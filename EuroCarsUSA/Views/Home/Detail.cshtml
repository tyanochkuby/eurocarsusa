*@
@{
}

<div class="row">
    <div class="col-md-8">
        @*images*@
        <div class="row justify-content-center">
            <img src=@Model.Images[0] style="object-fit: cover; margin-bottom: 20px;">
        </div>
        
        <div class="row justify-content-center">
            <div class="d-flex flex-row align-items-center">
                @for (int i = 1; i < Model.Images.Count; i++)
                {
                    <img src=@Model.Images[i] style="height: 200px; object-fit: cover; margin-right: 10px;">
                }
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <h1>@(Model.Make + " " + Model.Model)</h1>
        <a class="btn btn-secondary rounded-pill w-100 py-2" id="toggleButton">
             <span id="showNumber">Show number</span>
            <span id="phoneNumber" style="display: none;"><i class="fas fa-phone fa-rotate-90"></i>  +1234567890</span>
        </a>

        @*formularz*@
    </div>
</div>

<hr style="border-top: 1px solid #000;"> @*divider*@

<div class="row"> <h2>Details</h2></div>

<div class="row">
    <div class="col-md-2"> 
        <p>Year</p>
        <p>Mileage</p>
        <p>Color</p>
    </div>
    <div class="col-md-2">
        <p>@Model.Year</p>
        <p>@Model.Mileage</p>
        <p>@Model.Color</p>
    </div>
</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script>
    $(document).ready(function(){
      $("#toggleButton").click(function(){
        $("#phoneNumber").toggle();
        $("#showNumber").toggle();
      });

    });
</script>