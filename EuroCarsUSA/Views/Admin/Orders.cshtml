@using EuroCarsUSA.Controllers
@using EuroCarsUSA.Data.Enums
@using EuroCarsUSA.Extensions
@using EuroCarsUSA.Services.Interfaces
@using EuroCarsUSA.ViewModels
@using EuroCarsUSA.Views.Shared.Components
@using Microsoft.AspNetCore.Components
@using Microsoft.Extensions.Localization
@using EuroCarsUSA.Extensions
@model IEnumerable<FormViewModel>
@inject IFormService formService
@inject IStringLocalizer<AdminController> Translator

<h1>Orders</h1>

<table>
    <thead>
        <tr>
            <th>@Translator["Id"]</th>
            <th>@Translator["Model"]</th>
            <th>@Translator["Max Price"]</th>
            <th>@Translator["Max Mileage"]</th>
            <th>@Translator["Min Year"]</th>
            <th>@Translator["Max Year"]</th>
            <th>@Translator["Description"]</th>
            <th>@Translator["Makes"]</th>
            <th>@Translator["Colors"]</th>
            <th>@Translator["Car Types"]</th>
            <th>@Translator["Fuel Types"]</th>
            <th>@Translator["Transmission"]</th>
            <th>@Translator["Status"]</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var form in Model)
        {
            <tr>
                <td>@form.Id</td>
                <td>@form.Model</td>
                <td>@form.MaxPrice</td>
                <td>@form.MaxMileage</td>
                <td>@form.MinYear</td>
                <td>@form.MaxYear</td>
                <td>@form.Description</td>
                <td>
                    @foreach (var make in form.CarMakes)
                    {
                        <span>@make</span>
                    }
                </td>
                <td>
                    @foreach (var color in form.CarColors)
                    {
                        <span>@(color.ToLocalizedString(Translator))</span>
                    }
                </td>
                <td>
                    @foreach (var carType in form.CarTypes)
                    {
                        <span>@carType</span>
                    }
                </td>
                <td>
                    @foreach (var fuelType in form.CarFuelTypes)
                    {
                        <span>@(fuelType.ToLocalizedString(Translator))</span>
                    }
                </td>
                <td>
                    @foreach (var transmission in form.CarTransmissions)
                    {
                        <span>@(transmission.ToLocalizedString(Translator))</span>
                    }
                </td>
                <td>
                    <select class="form-control" name="status-@form.Id" onchange="updateStatus('@form.Id', this.value)">
                        @foreach (var status in Enum.GetValues(typeof(FormStatus)).Cast<FormStatus>())
                        {
                            if (status == form.Status)
                            {
                                <option value="@status" selected>@(status.ToLocalizedString(Translator))</option>
                            }
                            else
                            {
                                <option value="@status">@status</option>
                            }
                        }
                    </select>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script>
        function updateStatus(formId, status) {
            console.log("ent");
            $.ajax({
                url: '/Admin/SetOrderStatus',
                data: { id: formId, status: status},
                type: 'PUT',
                success: function () {
                    location.reload();
                },
                error: function () {
                    alert('An error occurred while updating form status.');
                }
            });
        }
    </script>
}