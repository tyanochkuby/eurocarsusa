@using EuroCarsUSA.Controllers
@using EuroCarsUSA.ViewModels
@using Microsoft.Extensions.Localization
@model List<CarStatisticViewModel>
@inject IStringLocalizer<AdminController> Translator
<h1 class="mt-3">Statistics</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>@(Translator["Make"])</th>
            <th>@(Translator["Model"])</th>
            <th>@(Translator["Year"])</th>
            <th>@(Translator["Likes"])</th>
            <th>@(Translator["Views"])</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var car in Model)
        {
            <tr>
                <td>@car.Make.ToString()</td>
                <td>@car.Model</td>
                <td>@car.Year</td>
                <td>@car.Likes</td>
                <td>@car.Views</td>
            </tr>
        }
    </tbody>
</table>