@using EuroCarsUSA.Resources
@using EuroCarsUSA.ViewModels
@model List<CarStatisticViewModel>

@inject Localizer localizer

<h1 class="mt-3">Statistics</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>@localizer.Make</th>
            <th>Model</th>
            <th>Year</th>
            <th>Likes</th>
            <th>Views</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var car in Model)
        {
            <tr>
                <td>@car.Make.ToString()</td>
                <td>@car.Model</td>
                <td>@car.Year</td>
                <td>@car.Likes</td>
                <td>@car.Views</td>
            </tr>
        }
    </tbody>
</table>