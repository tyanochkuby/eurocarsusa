@using EuroCarsUSA.ViewModels
@model FormViewModel

@{
    ViewData["Title"] = "Custom Order";
}

<h2>Custom Order</h2>

<form asp-action="SubmitForm" method="post">
    <div class="form-group">
        <label asp-for="MaxPrice"></label>
        <input asp-for="MaxPrice" class="form-control" />
        <span asp-validation-for="MaxPrice" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="MaxMileage"></label>
        <input asp-for="MaxMileage" class="form-control" />
        <span asp-validation-for="MaxMileage" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="MinYear"></label>
        <input asp-for="MinYear" class="form-control" />
        <span asp-validation-for="MinYear" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="MaxYear"></label>
        <input asp-for="MaxYear" class="form-control" />
        <span asp-validation-for="MaxYear" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Model"></label>
        <input asp-for="Model" class="form-control" />
        <span asp-validation-for="Model" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Car Makes</label>
        <select asp-for="CarMakes" class="form-control" multiple>
            @foreach (var carMake in Enum.GetValues(typeof(EuroCarsUSA.Data.Enum.CarMake)))
            {
                <option value="@carMake">@carMake</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label>Car Colors</label>
        <select asp-for="CarColors" class="form-control" multiple>
            @foreach (var carColor in Enum.GetValues(typeof(EuroCarsUSA.Data.Enum.CarColor)))
            {
                <option value="@carColor">@carColor</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label>Car Types</label>
        <select asp-for="CarTypes" class="form-control" multiple>
            @foreach (var carType in Enum.GetValues(typeof(EuroCarsUSA.Data.Enum.CarType)))
            {
                <option value="@carType">@carType</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label>Car FuelTypes</label>
        <select asp-for="CarFuelTypes" class="form-control" multiple>
            @foreach (var carFuelType in Enum.GetValues(typeof(EuroCarsUSA.Data.Enum.CarFuelType)))
            {
                <option value="@carFuelType">@carFuelType</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label>Car Transmission</label>
        <select asp-for="CarTransmissions" class="form-control" multiple>
            @foreach (var carTransmission in Enum.GetValues(typeof(EuroCarsUSA.Data.Enum.CarTransmission)))
            {
                <option value="@carTransmission">@carTransmission</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
