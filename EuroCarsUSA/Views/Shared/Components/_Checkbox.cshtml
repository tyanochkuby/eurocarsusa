@{
    string mainClasses = ViewData["MainClasses"] as string ?? "";
    string mainAttributes = ViewData["MainAttributes"] as string ?? "";

    string checkboxClasses = ViewData["CheckboxClasses"] as string ?? "";
    string checkboxAttributes = ViewData["CheckboxAttributes"] as string ?? "";

    string text = ViewData["Text"] as string ?? "";

    mainClasses = "class=\"checkbox-container\"";
    checkboxClasses = "myCheckBox";
}



<label class="checkbox-container">
    <input type="checkbox" class="myCheckBox">
    <div class="checkbox-wrapper">
        <span class="checkbox-custom">
            <svg class="checkbox-icon" width="12" height="10" viewBox="0 0 12 10" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M4 9.4L0 5.4L1.4 4L4 6.6L10.6 0L12 1.4L4 9.4Z" fill="white" />
            </svg>
        </span>
    </div>
    <span class="checkbox-label">@text</span>
</label>
