@using EuroCarsUSA.Resources
@using EuroCarsUSA.Views.Shared.Components

@inject Localizer localizer
@model IEnumDropdown

<select class="form-control @Model.CssClass" name="@Model.Name" style="height: 46px; @Model.Style">
    @foreach (var option in Enum.GetValues(Model.Value.GetType()))
    {
        if(option.ToString() == Model.Value.ToString())
        {
            <option selected value="@option">@localizer.GetValue($"{option.GetType().Name}_{option}")</option>
        }
        else
        {
            <option value="@option">@localizer.GetValue($"{option.GetType().Name}_{option}")</option>
        }
    }
</select>
