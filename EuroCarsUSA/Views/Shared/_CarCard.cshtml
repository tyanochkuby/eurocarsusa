@using EuroCarsUSA.ViewModels
@using EuroCarsUSA.Controllers
@using EuroCarsUSA.Data.Enums
@using EuroCarsUSA.Extensions
@using EuroCarsUSA.Models
@using Microsoft.Extensions.Localization
@model CarViewModel
@inject IStringLocalizer<HomeController> Translator

    
<div class="col-xl-4 col-lg-4 col-md-6 col-sm-6 col-6 px-0">
    <a asp-controller="Home" , asp-action="Detail" , asp-route-id=@Model.Id class="text-black text-decoration-none">
        <div class="card pt-2 box-shadow rounded-xxl">
            <div class="img-container overflow-hidden mx-2 mt-1">
                <img class="card-img float-left rounded-xxl" src=@Model.Images[0] alt=@(Model.Color.ToString() + Model.Make.ToString() + Model.Model)>
            </div>

            <div class="card-body">
                <div class="row justify-content-between fh-regular">
                    <!-- Car name -->
                    <div class="col-sm-7 col-12 px-1 px-sm-2 fh-card-header">
                        <b>@(Model.Make + " " + Model.Model)</b>
                    </div>
                    <!-- Price -->
                    <div class="col-sm-5 col-12 px-1 px-sm-2 text-sm-end fh-card-title">
                        <div class="mb-0">@string.Format(new System.Globalization.CultureInfo("pl-PL"), "{0:N0}", Model.Price) PLN</div>
                    </div>
                </div>

                <!-- divider -->
                <hr style="border-top: 1px solid #000;" class="mb-2 mt-1">


                <div class="row justify-content-between fh-regular">
                    <div class="col-12 col-sm-6">
                        <div class="row">
                            <div class="d-flex align-items-center justify-content-start">
                                <img class="carIcon" src="/icons/car_millage.svg">
                                <div class="ms-2 text-subhead">@Model.Mileage</div>
                                <div class="ms-2 text-subhead">km</div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="d-flex align-items-center justify-content-start">
                                <img class="carIcon" src="/icons/car_engine.svg">
                                <div class="ms-2 text-subhead">@(Model.FuelType == EuroCarsUSA.Data.Enums.CarFuelType.Electric ? Translator["Electric"] : Model.EngineVolume.ToString() + " cm3")</div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-sm-6 text-sm-end">
                        <div class="row">
                            <div class="d-flex align-items-center justify-content-start justify-content-sm-end">
                                <img class="carIcon" src="/icons/car_gearbox.svg">
                                <div class="ms-2 text-subhead">@(((CarTransmission)Model.Transmission).ToLocalizedString(Translator))</div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="d-flex align-items-center justify-content-start justify-content-sm-end">
                                <img class="carIcon" src="/icons/car_year.svg">
                                <div class="ms-2 text-subhead">@Model.Year</div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
            <div class="row ">
                <div class="d-flex justify-content-end mb-3 pe-4 ps-1">
                    @if (Model.IsLiked)
                    {
                        @await Html.PartialAsync("Components/Buttons/LikePressed", Model.Id)
                    }
                    else
                    {
                        @await Html.PartialAsync("Components/Buttons/LikeUnpressed", Model.Id)
                    }
                </div>
            </div>
        </div>
    </a>
</div>