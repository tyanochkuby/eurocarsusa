            <div>
                <a asp-controller="Admin"
                       asp-action="EditCatalog"
                   asp-route-culture="@CultureInfo.CurrentUICulture.Name"
                   type="button"
                   class="btn btn-header btn-primary rounded-pill">
                    <svg class="carIcon" width="96" height="96" viewBox="0 0 96 96" fill="#7e9ded" xmlns="http://www.w3.org/2000/svg">
